<header>
    <nav>
        <div class="menu-icon">
            <i class="fa fa-bars fa-2x"></i>
        </div>
        <div class="logo">
            <a href="/">LOGO</a>
        </div>
        <div class="menu">
            <ul>
                <li><a href="/data">Donn√©es</a></li>
