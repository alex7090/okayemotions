<link rel="stylesheet" type="text/css" href="password.css">

<div class="container h-80">
    <% if ( sessionFlash && sessionFlash.message) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= sessionFlash.message %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
        </div>
        <% } %>
            <div class="row align-items-center h-100">

                <div class="col-3 mx-auto">
                    <div class="text-center">
                        <img id="profile-img" src="image.jpg" />
                        <p id="profile-name" class="profile-name-card"></p>
                        <form action="/auth/" method="POST" class="form-signin">


                            <input type="password" name="password" id="password" class="form-control form-group"
                                placeholder="password" required autofocus>

                            <input type="hidden" name="email" id="email" class="form-control form-group" value="tmp"
                                required autofocus>
                            <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">enter</button>
                        </form>
                    </div>
                </div>
            </div>
</div>