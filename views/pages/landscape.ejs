            <!-- <button style="border-radius: 5px;" type="button" class="btn btn-secondary">Edit</button> -->
            <button style="border-radius: 5px;" type="button" class="btn btn-danger"
                onclick="myDelete('<%-data.id%>')">Delete</button>

