

<style>
    :root {
        --newcontainer-bg-color: #333;
        --left-bg-color: rgba(223, 39, 39, 0.7);
        --left-mybutton-hover-color: rgba(161, 11, 11, 0.3);
        --right-bg-color: rgba(43, 43, 43, 0.8);
        --right-mybutton-hover-color: rgba(92, 92, 92, 0.3);
        --hover-width: 75%;
        --other-width: 25%;
        --speed: 1000ms;
    }

    html,
    body {
        padding: 0;
        margin: 0;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        width: 100%;
        height: 100%;
        overflow-x: hidden;
    }

    h2 {
        font-size: 3rem;
        color: #fff;
        position: absolute;
        left: 50%;
        top: 20%;
        transform: translateX(-50%);
        white-space: nowrap;
    }

    .mybutton {
        display: block;
        position: absolute;
        left: 50%;
        top: 40%;
        height: 2.5rem;
        padding-top: 1.3rem;
        width: 15rem;
        text-align: center;
        color: #fff;
        border: #fff solid 0.2rem;
        font-size: 1rem;
        font-weight: bold;
        text-transform: uppercase;
        text-decoration: none;
        transform: translateX(-50%);
    }

    .split.left .mybutton:hover {
        background-color: var(--left-mybutton-hover-color);
        border-color: var(--left-mybutton-hover-color);
    }

    .split.right .mybutton:hover {
        background-color: var(--right-mybutton-hover-color);
        border-color: var(--right-mybutton-hover-color);
    }

    .newcontainer {
        position: relative;
        width: 100%;
        height: 100%;
        background: var(--newcontainer-bg-color);
    }

    .split {
        position: absolute;
        width: 50%;
        height: 100%;
        overflow: hidden;
    }

    .split.left {
        left: 0;
        background: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTM2wRrmIjNKbYhbStUfyICqoaHmsQLJrWxKw&usqp=CAU') center center no-repeat;
        background-size: cover;
    }

    .split.left:before {
        position: absolute;
        content: "";
        width: 100%;
        height: 100%;
        background: var(--left-bg-color);
    }

    .split.right {
        right: 0;
        background: url('https://stickerdeco.fr/wp-content/uploads/2018/08/zelda_wind_waker_link-02.png') center center no-repeat;
        background-size: cover;
    }

    .split.right:before {
        position: absolute;
        content: "";
        width: 100%;
        height: 100%;
        background: var(--right-bg-color);
    }

    .split.left,
    .split.right,
    .split.right:before,
    .split.left:before {
        transition: var(--speed) all ease-in-out;
    }

    .hover-left .left {
        width: var(--hover-width);
    }

    .hover-left .right {
        width: var(--other-width);
    }

    .hover-left .right:before {
        z-index: 2;
    }


    .hover-right .right {
        width: var(--hover-width);
    }

    .hover-right .left {
        width: var(--other-width);
    }

    .hover-right .left:before {
        z-index: 2;
    }

    @media(max-width: 800px) {
        h2 {
            font-size: 2rem;
        }

        .mybutton {
            width: 12rem;
        }
    }

    @media(max-height: 700px) {
        .mybutton {
            top: 70%;
        }
    }
</style>

<div class="newcontainer">
    <a href="/new/upload" class="split left">
        <h2>I want to upload a video</h2>
    </a>
    <a href="/new/link" class="split right">
        <h2>I want to share a link</h2>
    </a>
</div>

<script>
    const left = document.querySelector(".left");
    const right = document.querySelector(".right");
    const container = document.querySelector(".newcontainer");

    left.addEventListener("mouseenter", () => {
        container.classList.add("hover-left");
    });

    left.addEventListener("mouseleave", () => {
        container.classList.remove("hover-left");
    });

    right.addEventListener("mouseenter", () => {
        container.classList.add("hover-right");
    });

    right.addEventListener("mouseleave", () => {
        container.classList.remove("hover-right");
    });
</script>