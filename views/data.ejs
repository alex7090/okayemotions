<script>
    var $table = $('#table');
    var data = '<%- JSON.stringify(data) %>';
    var data_json = JSON.parse(data);
    console.log(data);
    $(function () {
        $('#table').bootstrapTable({
            data: data_json,
            columns: [{}, {}, {}, {}, {}, {}, {}, {
                field: 'operate',
                title: 'Link',
                align: 'center',
                valign: 'middle',
                clickToSelect: false,
                formatter: function (value, row, index) {
                    if (row.type == 'link') {
                        return row.link;
                    } else {
                        return '<button class="btn btn-success" onclick=""> Download video</button>';
                    }
                }
            },
            {
                field: 'operate',
                title: 'Video',
                align: 'center',
                valign: 'middle',
                clickToSelect: false,
                formatter: function (value, row, index) {
                    if (row.type == 'link') {
                        return '<button class="btn btn-success" onclick=" window.open(\'https://' + row.link + '\',\'_blank\')"> View</button>';
                    } else {
                        return '<button class="btn btn-success" onclick=" window.open(\'watch?video=' + row.link + '\',\'_blank\')"> View</button>';
                    }
                }
            }
            ]
        });
    });
</script>